{
  "name": "fcc-weather-app",
  "version": "1.0.0",
  "description": "A simple weather application for freeCodeCamp",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "parcel index.html --open",
    "build": "parcel build index.html --public-url ./",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "postdeploy": "rimraf dist"
  },
  "author": "Carl Hain",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "parcel-bundler": "^1.7.1",
    "rimraf": "^2.6.2"
  }
}
